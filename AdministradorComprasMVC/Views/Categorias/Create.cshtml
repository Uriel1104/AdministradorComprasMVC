@model AdministradorComprasMVC.Models.Categorias

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-5 col-lg-5">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Categorias</div>
                </div>
                <div class="card-body">
                    <form asp-controller="Categorias" asp-action="create" method="post" id="frmCategorias" >
                      <div class="form-group">
                        <label for="">Nombre</label>
                        <input type="text" class="form-control" id="" placeholder="Nombre" asp-for="Nombre">
                      </div>
                      <div class="form-group">
                        <label for="">Descripcion</label>
                        <input type="text" class="form-control" id="" placeholder="Descripcion" asp-for="Descripcion">
                      </div>
                      <br />
                      <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
